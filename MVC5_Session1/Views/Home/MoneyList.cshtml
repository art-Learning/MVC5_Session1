@using MVC5_Session1.Models
@model List<MoneyRecordViewModel>
@(Layout="")

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            @{ 
                int i = 0;
            }
            @foreach (var rec in Model)
            {
                i += 1;
                <tr>
                    <td>@i</td>
                    <td>@getTypeName(rec.moneyType)</td>
                    <td>@rec.createDts.ToString("yyyy-MM-dd")</td>
                    <td>@rec.amount.ToString("#,#")</td>
                </tr>
            }
        </table>
    </div>
</div>

@helper getTypeName(MoneyType type)
{
    switch (type)
    {
        case MoneyType.Income:<span class="text-danger">收入</span>; break;
    case MoneyType.Pay:<span class="text-primary">支出</span>; break;
    default:<text>--</text>break;
    }
}
